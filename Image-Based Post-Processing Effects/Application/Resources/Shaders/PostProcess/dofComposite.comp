#version 450 core

layout(local_size_x = 8, local_size_y = 8, local_size_z= 1) in;

layout(rgba16f, binding = 0) uniform image2D uImgOut;

uniform sampler2D uNearTexture;
uniform sampler2D uFarTexture;
uniform sampler2D uColorTexture;

void main()
{	
	vec2 texelSize = vec2(1.0 / textureSize(uColorTexture, 0).xy);
	vec2 texCoord = vec2(gl_GlobalInvocationID.xy + 0.5) * texelSize;
	
    vec4 dofNear = texture(uNearTexture, texCoord);
	vec4 dofFar = texture(uFarTexture, texCoord);
	vec3 color = texture(uColorTexture, texCoord).rgb;
	
	color = mix(color, dofFar.rgb, min(5.0 * dofFar.a, 0.5) * 2.0);
	color = mix(color, dofNear.rgb, min(5.0 * dofNear.a, 0.5) * 2.0);
	
	imageStore(uImgOut, ivec2(gl_GlobalInvocationID.xy), vec4(color, 1.0));
}